 {%extends 'userTemplate.html.twig' %}

{% block title %}Votre historique du panier {% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1.5em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        h3{
            color:var(--black);
            font-size: 2.5rem;
        }
        .btn:hover {
            background: var(--red);
            letter-spacing: .1rem;
            border-color: var(--red);
        }
        .btn{
            border-color: #0062cc;
        }
        .valid-btn{

            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1.5rem;
        }
        .custom-search {
            position: relative;
            width: 300px;
            margin-left: 30%;

        }
        .custom-search-input {
            width: 100%;
            height: 100%;
            border: 1px solid #ccc;
            border-radius: 100px;
            padding: 10px 100px 10px 20px;
            line-height: 1;
            box-sizing: border-box;
            outline: none;
        }
        .custom-search-botton {
            position: absolute;

            height:100%;
            right: 3px;
            top: 3px;
            bottom: 3px;
            border: 0;
            background: #d1095e;
            color: #fff;
            outline: none;
            margin: 0;
            padding: 0 10px;
            border-radius: 100px;
            z-index: 2;
        }
        .form-control{
            font-size: 1.6rem;
        }
    </style>

    <div class="example-wrapper" id="panier">
        <h1 class="heading"><i class="fas fa-shopping-cart"></i> Panier </h1>
        {% for panier in panierList %}
            <div class="card shadow mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="{{ asset('uploads/' ~ panier.menu.image) }}" alt="Image" class="img-fluid img-thumbnail" width="200">
                        </div>
                        <div class="col-md-8">
                            <h3 class="card-title">{{panier.menu.titre}}</h3>
                            <p class="card-text">{{panier.menu.description}}</p>
                            <div>
                                <h3>Prix</h3>
                                <span>{{panier.menu.prix}} TND</span>

                    </div>
                </div>
            </div>
                </div>
            </div>
        {% endfor %}
                </div>
    <div class="valid-btn">
                <a href="{{ path('app_historique') }}" class="btn btn-danger"><i class="fas fa-eye"> Retour</i></a>
            </div>
{% endblock %}