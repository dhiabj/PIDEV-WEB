{% extends 'adminTemplate.html.twig' %}

{% block title %}Ajouter Utilisateur
{% endblock %}

{% block stylesheets %}
    <style>
        select{
            display: block;
            width: 100%;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}


{% block body %}


    <nav class="navbar navbar-dark bg-dark mb-3 rounded">
        <span class="navbar-brand mb-0 h1">Ajouter utilisateur</span>
    </nav>
    {{form_start(formClass)}}
    <div class="form-group">
        {{ form_label(formClass.nom) }}
        {{ form_widget(formClass.nom, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(formClass.prenom) }}
        {{ form_widget(formClass.prenom, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(formClass.email) }}
        {{ form_widget(formClass.email, {'attr': {'class': 'form-control'}}) }}

    </div>
    <div class="form-group">
        {{ form_label(formClass.password,'Mot de passe') }}
        {{ form_widget(formClass.password, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(formClass.date, 'Date') }}
        {{ form_widget(formClass.date, {'attr': {'class': 'date'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(formClass.numTel,'Numéro téléphone') }}
        {{ form_widget(formClass.numTel, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(formClass.adresse) }}
        {{ form_widget(formClass.adresse, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(formClass.role) }}
        {{ form_widget(formClass.role, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(formClass.etat) }}
        {{ form_widget(formClass.etat, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_row(formClass.valider, {'attr': {'class': 'btn btn-primary'}}) }}

    {{form_end(formClass)}}


{% endblock %}
