<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/41664e673b.js" crossorigin="anonymous"></script>
    <title>{% block title %}ForU{% endblock %}</title>

    <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700' rel='stylesheet'>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- bootstrap  -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/starrating/css/rating.css') }}" />
    {% endblock %}
    <link rel="stylesheet" href="{{ asset ('css/styles.css')}}">
</head>
<body>
    
<!-- header section starts      -->

<header>

    <a href="{{path ('app_home')}}" class="logo"><i class="fas fa-utensils"></i> ForU</a>

    <nav class="navbar">
        <a href="{{path ('app_home')}}">Accueil</a>
        <a href="{{path ('app_menus')}}">Menu</a>
        <a href="{{path ('app_evenement')}}">Événement</a>
        {% if is_granted('ROLE_USER') %}
        <a href="{{path ('app_reclamation_user_index')}}">Réclamation</a>
        {% endif %}
        <a href="{{path ('app_about')}}">À propos</a>
    </nav>

    <div class="icons">
    {% if is_granted('ROLE_USER') %}
        <a href="{{ path ('app_livraison_user') }}" class="fa-solid fa-truck"></a>
        <a href="{{path ('app_favoris')}}" class="fas fa-heart"></a>
        <a href="{{ path ('app_panier') }}" class="fas fa-shopping-cart"></a>
        <a href="{{ path ('app_historique') }}" class="fas fa-history"></a>
        <a href="{{ path ('app_user_profil') }}" class="fas fa-user"></a>
        <a href="{{ path('app_logout') }}" class="fas fa-sign-out-alt"></a>
        {% else %}
        <a href="{{ path('app_login') }}" class="fas fa-sign-in-alt"></a>
    {% endif %}
        
    </div>

</header>

<!-- header section ends-->
<div class="container-fluid wrapper">

    {% for flash in app.flashes('success') %}
        <div class="alert alert-success " style="align-items: center">{{ flash }}</div>
    {% endfor %}
    {% for flash in app.flashes('warning') %}
        <div class="alert alert-warning " style="align-items: center">{{ flash }}</div>
    {% endfor %}
    {% for flash in app.flashes('error') %}
        <div class="alert alert-danger " style="align-content: center">{{ flash }}</div>
    {% endfor %}
    <div class="mt-3">
        {% block body %}{% endblock %}
    </div>

</div>

<!-- footer section starts  -->

<section class="footer">

    <div class="box-container">

        <div class="box">
            <h3>Locations</h3>
            <a href="#">Tunisia</a>
        </div>

        <div class="box">
            <h3>Liens rapides</h3>
            <a href="#">Accueil</a>
            <a href="#">Menu</a>
            <a href="#">Événement</a>
            <a href="#">Réclamation</a>
            <a href="#">À propos</a>
        </div>

        <div class="box">
            <h3>Contact info</h3>
            <a href="#">+123-456-7890</a>
            <a href="#">+111-222-3333</a>
            <a href="#">ForU@gmail.com</a>
            <a href="#">El ghazella, Ariana, Tunisia</a>
        </div>

        <div class="box">
            <h3>Suivez-nous</h3>
            <a href="#">facebook</a>
            <a href="#">twitter</a>
            <a href="#">instagram</a>
            <a href="#">linkedin</a>
        </div>

    </div>

    <div class="credit"> copyright @ 2022 by <span>Inventors</span> </div>

</section>

<!-- footer section ends -->

<!-- loader part  -->
<div class="loader-container">
    <img src="{{ asset ('images/loader.gif')}}" alt="">
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
<script src="{{asset ('js/script.js')}}"></script>
{% block javascripts %}
    <script src="//code.jquery.com/jquery.js"></script>
    <script src="{{ asset('bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
    <script src="{{ asset('bundles/starrating/js/rating.js') }}"></script>
{% endblock %}
{{ include('@MercurySeriesFlashy/flashy.html.twig') }}
</body>
</html>