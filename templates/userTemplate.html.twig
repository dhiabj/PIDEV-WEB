    <link rel="stylesheet" href="{{ asset ('css/styles.css')}}">
    <script type="text/javascript">
        global.$ = global.jQuery = $;
        $(document).ready(function (){
            setInterval(function (){
                $.post("get.php",{data:'get'},function (data){
                    if(data>0){
                        $("span").show();
                        $("span").text(data);
                    }
                });
            },1000);
            $(".noti").click(function (){
                $("span").hide();
                $.post("get.php",{update:'update'},
                 function (data){

                 });
            });
        });
    </script>
</head>
